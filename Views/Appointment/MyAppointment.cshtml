@model IEnumerable<SchoolOfScience.Models.Appointment>

@{
    ViewBag.Title = "Index";
}

<div class="showcase-title">
    <img src="~/Images/Dashboard/advising.png" />
    <h2>Advising Appointments</h2>
    @*<div class="remarks">
        Only eligible programs will be displayed on this page. Click @Html.ActionLink("here", "Showall", "Program") to show all programs instead.
    </div>*@
</div>

<h2>My Appointments</h2>

<p>
    @Html.ActionLink("Make Booking", "Booking", "Appointment", new { @class = "button" })
</p>

<table class="data-table">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Time
            </th>
            <th>
                Venue
            </th>
            <th>
                Concerns
            </th>
            <th>
                Host
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @String.Format("{0:yyyy-MM-dd (ddd)}", item.start_time)
            </td>
            <td>
                @String.Format("{0:HH:mm}", item.start_time) - @String.Format("{0:HH:mm}", item.end_time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentVenue.name)
            </td>
            <td>
                @foreach (var concern in item.AppointmentConcerns)
                {
                    if (concern.program_id != null)
                    {
                        <div>@Html.ActionLink(concern.Program.name, "Details", "Program", new { id = concern.program_id }, new { @class = "program-details-link" })</div>
                    }
                    else 
                    {
                        if (!concern.custom)
                        {
                        <div>@Html.DisplayFor(modelItem => concern.name)</div>
                        }
                        else
                        {
                        <div title="@Html.DisplayFor(modelItem => concern.name)">Others</div>
                        }
                    }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentHost.name)
            </td>
            <td>
                <div class="action-wrapper">
                @if (item.start_time > DateTime.Now.AddHours(24))
                {
                    <text>
                    Cancel
                    <a href="@Url.Action("Cancel", "Appointment", new { id = item.id })" class = "action-link" title = "Cancel My Appointment"><img src="@Url.Content("~/Images/Action/delete.gif")" /></a>
                    </text>
                } 
                else
                {
                    <text>Expired</text>
                }
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="clear-fix"></div>
@if (Request["viewall"] != "True")
{
<p>
    @Html.ActionLink("View Also Expired Appointments", "MyAppointment", "Appointment", new { viewall = true }, new { @class = "button" })
</p>
}
else
{
<p>
    @Html.ActionLink("View Future Appointments Only", "MyAppointment", "Appointment", null, new { @class = "button" })
</p>
}

@section Scripts {
    <script>
        $(function () {
            $(".data-table").dataTable({
                "sScrollX": "100%",
                "aaSorting": [[0, "asc"], [1, "asc"]],
                "bPaginate": false
            });

            $(".button").button();

            $(".program-details-link").click( function (e) {
                e.preventDefault();
                showDialog($(this).prop("href"), "#error-dialog", "#dialog1");
            });

        });
    </script>
}


