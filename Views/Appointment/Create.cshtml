@model SchoolOfScience.Models.ViewModels.AppointmentCreateMultipleViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Appointment</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.appointment.start_time)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.appointment.start_time, "{0:yyyy-MM-dd HH:mm}", new { @class = "datetime-picker" })
            @Html.ValidationMessageFor(model => model.appointment.start_time)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.duration)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.duration)
            @Html.ValidationMessageFor(model => model.duration)
        </div>
        
        <div class="editor-label">
            Conerns
        </div>
        <div class="editor-field">
            @Html.ListBoxFor(model => model.concerns, ViewBag.concernList as MultiSelectList, new { @class = "chosen" })
            @Html.ValidationMessageFor(model => model.concerns)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.appointment.host_id, "Host")
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.appointment.host_id, ViewBag.hostList as SelectList)
            @Html.ValidationMessageFor(model => model.appointment.host_id)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.appointment.venue_id, "Venue")
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.appointment.venue_id, ViewBag.venueList as SelectList, String.Empty)
            @Html.ValidationMessageFor(model => model.appointment.venue_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.appointment.status_id, "Status")
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.appointment.status_id, ViewBag.statusList as SelectList)
            @Html.ValidationMessageFor(model => model.appointment.status_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.appointment.remarks)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.appointment.remarks)
            @Html.ValidationMessageFor(model => model.appointment.remarks)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
