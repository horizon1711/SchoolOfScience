@model IEnumerable<SchoolOfScience.Models.NominationLevel>

<h2>Nominations</h2>

<table class="data-table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Program Name
            </th>
            <th>
                Quota
            </th>
            <th>
                Shortlisted
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @String.Format("{0:yyyy-MM-dd}", item.start_date)
            </td>
            <td>
                @String.Format("{0:yyyy-MM-dd}", item.end_date)
            </td>
            <td>
                @Html.ActionLink(item.Nomination.Program.name, "Details", "Program", new { id = item.Nomination.Program.id }, new { @class = "program-details-link" })
                <div class="program-note">
                    <div>
                    @if (!String.IsNullOrEmpty(item.Nomination.Program.job_position))
                    {
                        @(item.Nomination.Program.job_position)
                    }
                    </div>
                    <div>
                    @if (!String.IsNullOrEmpty(item.Nomination.Program.host_name))
                    {
                        if (!String.IsNullOrEmpty(item.Nomination.Program.website))
                        {
                            <a href="@(item.Nomination.Program.website)" target="_blank" title="@(item.Nomination.Program.website)">@(item.Nomination.Program.host_name)</a>
                        }
                        else
                        {
                            @(item.Nomination.Program.host_name)
                        }
                    }
                    </div>
                </div>
            </td>
            <td>
                @if (item.Nominators.FirstOrDefault(n => n.nominator_username == User.Identity.Name) != null)
                {
                    if (item.Nominators.FirstOrDefault(n => n.nominator_username == User.Identity.Name).quota == 0)
                    {
                        <text>-</text>
                    }
                    else
                    {
                        @item.Nominators.FirstOrDefault(n => n.nominator_username == User.Identity.Name).quota
                    }
                }
            </td>
            <td>
                @if (item.Nomination.NominationLevels.FirstOrDefault(l => l.nomination_level == item.nomination_level - 1) != null)
                {
                    @item.Nomination.NominationLevels.FirstOrDefault(l => l.nomination_level == item.nomination_level - 1).NominationApplications.Count()
                }
            </td>
            <td>
                <ul class="action-list">
                    <li>
                        @if (DateTime.Now > item.start_date && DateTime.Now < item.end_date.AddDays(1) && item.Nomination.NominationStatus.nominated)
                        {
                            @Html.ActionLink("Nominate", "ApplicationList", new { id = item.id })
                        }
                        else
                        {
                            @Html.ActionLink("View Details", "ApplicationList", new { id = item.id })
                        }
                    </li>
                </ul>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="clear-fix"></div>

@section Scripts {
    <script>
        $(function () {
            $(".data-table").dataTable({
                "sScrollX": "100%",
                "aaSorting": [[0, "asc"]],
                "bPaginate": false,
                "bInfo": false,
                "bFilter": true,
                "oLanguage": {
                    "sSearch": "",
                    "sInfo": "_TOTAL_ entries",
                    "sEmptyTable": "No matching record found"
                }
            });

            $(".program-details-link").click( function (e) {
                e.preventDefault();
                showDialog($(this).prop("href"), "#error-dialog", "#program-details-dialog");
            });
        });
    </script>
}
