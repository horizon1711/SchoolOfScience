<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>HKUST School of Science Office of Academic Advising and Support</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/themes/base/css")
        @Scripts.Render("~/bundles/modernizr")
        @if (HttpContext.Current.User.IsInRole("Admin") || HttpContext.Current.User.IsInRole("Advising") || HttpContext.Current.User.IsInRole("StudentDevelopment"))
        {
        <style type="text/css">
            .content-wrapper {
                width: 90%;
            }     
        </style>
        }
    </head>
    <body>
        <div id="container">
            <header>
		    <div class="top-sub-menus">
                <div class="content-wrapper">
                    <div class="site-login">
                        <section id="login">
                            @Html.Partial("_LoginPartial")
                        </section>
                    </div>
                </div>
		    </div>
            <div class="content-wrapper">
                <div class="site-title">
                    <div class="main-logo">
                        <img src="@Url.Content("~/Images/HKUST_logo_large.png")" />
                    </div>
                    <div class="app-logo">
                        <img src="@Url.Content("~/Images/mySCI_Logo.gif")" />
                    </div>
                </div>
                <div class="clear-fix"></div>
                <div class="main-menu">
                    @{Html.RenderAction("Menu", "Home");}
                    <div class="clear-fix"></div>
                </div>
            </div>
            </header>
            <div id="body">
                @RenderSection("featured", required: false)
                <section class="content-wrapper main-content clear-fix">
                    @RenderBody()
                </section>
                <footer>
                    <div class="content-wrapper">
                        <div class="footer-img">
                            <img src="~/Images/HKUST_logo_small.png" />
                        </div>
                        <div class="footer-facebook">
                            <a href="https://www.facebook.com/ssci.advise" target="_blank" class="facebook"><img src="~/Images/facebook_icon.png" /></a>
                        </div>
                        <div class="clear-fix"></div>
                        <div class="footer-column">
                            <strong>Address</strong>
                            <p>
                                Room 1401 (Lift 25/26), <br />
                                Academic Building, HKUST <br />
                                Kowloon, Hong Kong <br />
                            </p>
                        </div>
                        <div class="footer-column-small">
                            <strong>Tel</strong>
                            <p>
                                (852) 2358 6086
                            </p>
                        </div>
                        <div class="footer-column-small">
                            <strong>Email</strong>
                            <p>
                                <a href="mailto:advise@ust.hk">advise@ust.hk</a>
                            </p>
                        </div>
                        <div class="footer-column-right">
                            <p class="footer">
                                Copyright &copy; @DateTime.Now.Year Office of Academic Advising<br />
                                and Support, School of Science, HKUST.<br />
                                All Rights Reserved.
                            </p>
                        </div>
                    </div>
                    <a style="display:none;" href="http://apycom.com/">Apycom jQuery Menus</a>
                </footer>
                
                <div id="error-dialog" style="display: none"></div>
                <div id="info-dialog" style="display: none"></div>
                <div id="student-profile-dialog" style="display:none"></div>
                <div id="program-details-dialog" style="display:none"></div>
                <div id="application-dialog" style="display:none"></div>
                <div id="interview-comment-dialog" style="display:none"></div>
                <div id="batch-action-dialog" style="display:none"></div>
                <div id="add-edit-dialog" style="display:none"></div>
                <div id="appointment-booking-dialog" style="display:none"></div>
                <div id="calendar-dialog" style="display:none"></div>
                <div id="calendar-details-dialog" style="display:none"></div>
                <div id="exchange-list-dialog" style="display:none"></div>

            </div>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/jquerymenu")
        @Scripts.Render("~/bundles/dateformat")
        @Scripts.Render("~/bundles/hoverintent")
        @Scripts.Render("~/bundles/ckeditor")
        @Scripts.Render("~/bundles/dtpicker")
        @Scripts.Render("~/bundles/datatable")
        @Scripts.Render("~/bundles/chosen")
        @Scripts.Render("~/bundles/gridalicious")
        @Scripts.Render("~/bundles/collapse")
        @Scripts.Render("~/bundles/expanding")

        
        <script>

            //$("#container").css("height", $(window).height() - 210);

            function showDialog(link, errorDestination, successDestination, w, h) {
                $.ui.dialog.prototype._focusTabbable = function () { };//remove auto focus from dialog

                w = typeof w !== 'undefined' ? w : 950;
                h = typeof h !== 'undefined' ? h : 600;

                $.ajaxSetup({ cache: false });

                $.ajax({
                    url: link,
                    cache: false,
                    error: function (jqXHR, status, error) {
                        $(errorDestination).html(error).dialog({
                            width: 350,
                            height: 100,
                            overflow: "auto",
                            modal: true,
                            resizable: false,
                            draggable: false,
                            open: function () {
                                $(this).scrollTop(0);
                                $('.ui-widget-overlay').hide().fadeIn();
                            },
                            show: {
                                effect: 'fade',
                                duration: 200
                            },
                            hide: {
                                effect: 'fade',
                                duration: 100
                            }
                        });
                    },
                    success: function (result) {
                        $(successDestination).dialog({
                            width: w,
                            height: h,
                            overflow: "auto",
                            modal: true,
                            resizable: true,
                            draggable: true,
                            open: function () {
                                $(this).scrollTop(0);
                                $('.ui-widget-overlay').hide().fadeIn();
                            },
                            show: {
                                effect: 'fade',
                                duration: 200
                            },
                            hide: {
                                effect: 'fade',
                                duration: 100
                            }
                        }).html(result);
                    }
                });
            }

            $(function () {

                $("#menu").superfish();

                $(document).tooltip({
                    show: {
                        effect: 'slideDown'
                    },
                    open: function (event, ui) {
                        setTimeout(function () {
                            $(ui.tooltip).hide('fade');
                        }, 2500);
                    }
                });
                
                $(".chosen").chosen({
                    allow_single_deselect: true
                });

                $(".datetime-picker").datetimepicker({
                    format: "Y-m-d H:i",
                    validateOnBlur: false,
                    step: 30
                });

                $(".datename-picker").datetimepicker({
                    format: "Y-m-d H:i",
                    validateOnBlur: false
                });

                $(".date-picker").datetimepicker({
                    timepicker: false,
                    format: "Y-m-d",
                    validateOnBlur: false
                });

                //$(function () {

                //    $("table.dataTable tbody tr").hover(function () {
                //        $(this).fadeTo(1, 0.7)
                //    }, function () {
                //        $(this).fadeTo(1, 1)
                //    });
                //});

                $("fieldset.collapse").collapse();
                $("fieldset.startCollapse").collapse({ closed: true });

                @if (Session["FlashMessage"] != null)
                {
                    <text>
                    $.ui.dialog.prototype._focusTabbable = function () { };//remove auto focus from dialog
                    $("#error-dialog").html("@Html.Raw(Session["FlashMessage"].ToString())").dialog({
                        width: 600,
                        height: "auto",
                        overflow: "auto",
                        modal: true,
                        resizable: false,
                        draggable: false,
                        open: function () {
                            $(this).scrollTop(0);
                            $('.ui-widget-overlay').hide().fadeIn();
                        },
                        show: {
                            effect: 'fade',
                            duration: 200
                        },
                        hide: {
                            effect: 'fade',
                            duration: 100
                        }
                    });
                    </text>
                    Session.Remove("FlashMessage");
                }

            });
        </script>
        @RenderSection("scripts", required: false)
        <script>
        </script>
    </body>
</html>
