@model IEnumerable<SchoolOfScience.Models.ApplicationStatus>

@{
    ViewBag.Title = "Index";
}

<h2>Application Status Management</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="data-table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.editable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.submitted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rejected)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.default_status)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.editable)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.submitted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rejected)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.default_status)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) | 
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}
    </tbody>

</table>


@section Scripts {
    <script>
        $(function () {
            $(".data-table").dataTable();
        });
    </script>
}
