@model IEnumerable<SchoolOfScience.Models.InterviewStatus>

@{
    ViewBag.Title = "Index";
}

<h2>Interview Status Management</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="data-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.display_to_student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.notification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.default_status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.display_to_student)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.notification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.default_status)
            </td>
            <td>
            @if (!item.locked)
            {
                @Html.ActionLink("Edit", "Edit", new { id=item.id }) <text>|</text>
                @Html.ActionLink("Delete", "Delete", new { id=item.id })
            } else 
            {
                <text>System properties cannot be modified.</text>
            }
            </td>
        </tr>
}
    </tbody>

</table>


@section Scripts {
    <script>
        $(function () {
            $(".data-table").dataTable({
                "sScrollX": "100%",
            });
        });
    </script>
}